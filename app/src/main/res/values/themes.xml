<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ELegionApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name = "android:textColorPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name = "android:textColorSecondary">@color/purple_700</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="buttonStyle">@style/CommonButton</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.ELegionApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ELegionApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="back">
        <item name="background">@color/background</item>
    </style>



    <style name="HighLightText">
        <item name = "android:textSize">@dimen/highlight_size</item>
        <item name = "android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>


    <style name="CommonText">
        <item name = "android:fontFamily">@font/regular</item>
        <item name = "android:textSize">@dimen/text_size</item>
        <item name = "android:textColor">@color/article_text</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>


    <style name="filterText">
        <item name = "android:fontFamily">@font/medium</item>
        <item name = "android:textSize">@dimen/small_text_size</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
        <item name ="android:text">Фильтр</item>
    </style>


    <style name="filterEditText" parent="filterText">
        <item name="android:minWidth">150dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text"></item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
        <item name="android:hint">Поиск</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="filterIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/ic_elegion</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>


    <style name="ImportantText">
        <item name = "android:fontFamily"></item>
        <item name = "android:textSize">@dimen/text_size</item>
        <item name = "android:textColor">@color/important_article_text</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>



    <style name="littleText">
        <item name = "android:fontFamily">@font/regular</item>
        <item name = "android:textSize">@dimen/small_text_size</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
        <item name ="android:text">Фильтр</item>
    </style>



    <style name="showAll">
        <item name = "android:fontFamily">@font/regular</item>
        <item name = "android:textSize">@dimen/text_size</item>
        <item name = "android:textColor">@color/textButtonText</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:text">Показать всех</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>

    <style name="AppBarText">
        <item name = "android:fontFamily"></item>
        <item name = "android:textSize">@dimen/text_size</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>


    <style name="CommonButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/main_button_back</item>
        <item name="android:gravity">center</item>
        <item name = "cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name = "backgroundTint">@color/white</item>
        <item name = "strokeWidth">1dp</item>>
        <item name = "strokeColor">@color/main_button_back</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:fontFamily"></item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="IgnoreButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/ignore_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name = "backgroundTint">@color/white</item>
        <item name = "strokeWidth">1dp</item>>
        <item name = "strokeColor">@color/white</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:fontFamily"></item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EmphasizedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name = "backgroundTint">@color/main_button_back</item>
        <item name="rippleColor">@color/purple_200</item>
        <item name = "cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name = "android:layout_gravity">center</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:fontFamily"></item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="card">
        <item name = "cornerRadius">3dp</item>
        <item name = "strokeWidth">0.8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name= "rippleColor">@color/ripple_color</item>
        <item name="android:elevation" tools:targetApi="lollipop">12dp</item>
        <item name = "strokeColor">@color/black</item>
    </style>


    <style name="filterCard">
        <item name = "cornerRadius">10dp</item>
        <item name = "strokeWidth">1dp</item>
        <item name="contentPadding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name = "strokeColor">@color/black</item>
    </style>


    <style name="divider">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>


    <style name = "cardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name = "textField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="android:fontFamily"></item>

    </style>

    <style name = "numberTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name = "android:layout_margin">10dp</item>
        <item name = "android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="android:fontFamily"></item>

    </style>

</resources>