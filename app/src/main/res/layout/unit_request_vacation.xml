<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="35dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id = "@+id/icon"
        android:src = "@color/wrong_data"
        />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            style = "@style/HighLightText"
            android:text = "Иван Иванов"
            android:id = "@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style = "@style/littleText"
            android:layout_marginTop="5dp"
            android:text = "В отпуске 3 года"
            android:id = "@+id/vacationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style = "@style/littleText"
            android:layout_marginTop="5dp"
            android:text = "Замещает Олег Иванов"
            android:id = "@+id/vacationChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>